<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>

<div class="main">
  <table class="todo" id="0">
    <thead>
      <th>To Do</th>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <% if item.status == 0 %>
          <tr id="<%= item.id %>">
            <td>
              <p class="text"><%= item.text %></p>
                <p class="icons">
                   <img src="/images/edit_icon.png">
                  <img src="/images/trash_icon.png">
                </p>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <table class="doing" id="1">
    <thead>
      <th>Doing</th>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <% if item.status == 1 %>
          <tr id="<%= item.id %>">
            <td>
              <p class="text"><%= item.text %></p>
                <p class="icons">
                   <img src="/images/edit_icon.png">
                  <img src="/images/trash_icon.png">
                </p>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

    <table class="done" id="2">
      <thead>
        <th>Done</th>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <% if item.status == 2 %>
            <tr id="<%= item.id %>">
              <td>
                <p class="text"><%= item.text %></p>
                  <p class="icons">
                     <img src="/images/edit_icon.png">
                    <img src="/images/trash_icon.png">
                  </p>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
  </table>
</div>

